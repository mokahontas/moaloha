        <ul>
        <% @missing_person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </span>
    <% end %>

    <span class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %><br />
    </span>
    <span class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %><br />
    </span>
    <span class="field">
      <%= f.label :sex %><br />
      <%= f.text_field :sex %><br />
    </span>
    <span class="field">
      <%= f.label :location %><br />
      <%= f.text_area :location %><br />
    </span>
    <span class="field">
      <%= f.label :island %><br />
      <%= f.text_field :island %><br />
    </span>
    <span class="field">
      <%= f.label :height %><br />
      <%= f.text_field :height %><br />
    </span>
    <span class="field">
      <%= f.label :weight %><br />
      <%= f.text_field :weight %><br />
    </span>
    <span class="field">
      <%= f.label :image %><br />
      <%= f.text_area :image %><br />
    </span>
    <span class="field">
      <%= f.label :eye_color %><br />
      <%= f.text_field :eye_color %>
    </span>
    <span class="field">
      <%= f.label :information %><br />
      <%= f.text_area :information %><br />
    </span>
    <span class="field">
