      <%= f.text_field :latitude %><br />
    </span>
    <span class="field">
      <%= f.label :ethnicity %><br />
      <%= f.text_field :ethnicity %><br />
    </span>
    <span class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age %><br />
    </span>
    <span class="field">
      <%= f.label :circumstances %><br />
      <%= f.text_area :circumstances %><br />
    </span>
    <button type="button" name="button">
        <%= submit_tag "Update" %>
    </button>


  <% end %>
</div>
</div>
