
<div class="large-5 columns" id="resource_index">
<h2>Login</h2>

<% if flash[:success] %>
<p> <%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
<p> <%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %>
<p>
  <%=  label_tag :email %>
  <%= email_field_tag :email %>
</p>
<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>
<%= submit_tag "Login" %>
<% end %>
</div>