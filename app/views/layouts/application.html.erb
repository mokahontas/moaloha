<!DOCTYPE html>
<html>
<head>
  <title>Moaloha</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light|Exo|Bangers|Amatic+SC|Dancing+Script|Pacifico|Kaushan+Script|Courgette' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css">

  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyDXXLsj4vNRXIeeoGRHtWR9IutXLhhxI5Y"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

</head>
<body>
  <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1776990429249548',
      xfbml      : true,
      version    : 'v2.6'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
<div class="container">
  <div class="navbar">
    <%= link_to 'Home', pages_path %>
    <a href="#">Resources</a>
    <%= link_to 'Missing Person Database', missing_people_path %>
    <%= link_to 'Social', social_path %>
    <a href="#">Contact</a>

  </div>

  <%= yield %>


<footer>
  <div
    class="fb-like"
    data-share="true"
    data-width="150"
    data-show-faces="true">
  </div>
  <% if  @current_user.present? %>

  <%= link_to 'Log Out', logout_path, :method => :delete  %>

  <% else %>
  <%= link_to 'Admin', login_path %>
  <% end %>
  <% if @current_user.present? && @current_user.admin == true%>
    <%= link_to 'New User', new_user_path %>
    <%= link_to 'All Users', users_path %>
    <%= link_to "Add missing person", new_missing_person_path %>
    <% end %>
</footer>
</div>
</body>
</html>
